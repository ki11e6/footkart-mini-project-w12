<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body class="homepage d-flex flex-column min-vh-100">
    <%- include('./partials/user/user-navbar') %>

      <!-- banners -->
      <div class="container pt-2">
        <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false"
          data-bs-interval="false">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/productimages/banner1.jpg" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
              <img src="/productimages/banner2.jpg" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
              <img src="/productimages/banner3.jpg" class="d-block w-100" alt="..." />
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <!-- products -->

      <div class="container text-center">
        <h1 class="mt-3 bg-secondary p-3 fw-bold" style="font-family:cursive;"><i>Latest Products</i></h1>
        <br>

        <div class="row">
          <% if(products.length>0){ %>
            <% products.forEach(item=>{ %>

              <div class="col-md-3">
                <a href="/product/details/<%=item._id %>">
                  <div class="dress-card">
                    <div class="dress-card-head">
                      <img class="dress-card-img-top" src="/<%= item.images[0] %>" alt="">
                      <!-- <div class=" surprise-bubble"><span class="dress-card-heart">
                          <i class="fas fa-heart"></i>
                        </span><a href="#"> <span>More</span></a>
                      </div> -->
                    </div>
                    <div class="dress-card-body text-dark">
                      <h4 class="dress-card-title text-truncate">
                        <%= item.productname %>
                      </h4>
                      <p class="dress-card-para"></p>
                      <% if (item.offer>0){ %>
                        <p class="dress-card-para mt-1 position-relative"><span class="dress-card-price fs-5">Price: ₹
                            <%= Math.round(item.price -( item.price *(item.offer/100))) %>/-
                          </span><span class="dress-card-crossed mt-1"></span><span
                            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">(
                            <%= item.offer %>% OFF)
                          </span></p>
                        <% } else{ %>
                          <p class="dress-card-para mt-1"><span class="dress-card-price fs-5">Price: ₹ <%=item.price %>
                                /-</span><span class="dress-card-crossed mt-1"></span></p>
                          <% }%>
                            <div class="d-flex justify-content-between mt-3">
                              <button class="btn-wishlist" id="btn-cart" onclick="addtoCart('<%= item._id %>')">
                                <i class="fa fa-shopping-cart"></i>
                              </button>
                              <button class="btn-wishlist" onclick="addtoWishlist('<%= item._id %>')">
                                <i class="fa fa-heart"></i>
                              </button>
                            </div>
                    </div>
                  </div>
                </a>
              </div>

              <% }) %>
                <% } %>
        </div>
      </div>
      <%- include('./partials/bottom-navbar') %>


        <script src="/script/scriptadmin.js"></script>
  </body>

</html>