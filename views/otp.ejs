<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body class="">
        <%- include('./partials/top-navdef')%>

            <section class=" block vh-100 bg-image">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3 ">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-80 ">
                            <div class=" col-12 col-md-7 col-lg-5 col-xl-4">
                                <div class="card rounded-4 mt-5 ">
                                    <div class="card-body p-3 rounded-4">


                                        <form class="OTP" id="OTP" action="/otp" method="POST">

                                            <div class="input-control mb-4 ">
                                                <label class="form-label fw-bold" for="OTP">Enter OTP</label>
                                                <input type="text" id="otp" name="otp"
                                                    class="form-control form-control-lg" />
                                                <!-- <small>Error message</small> -->
                                                <span class="" id="time"> </span><br>
                                                <button class="btn btn-info  mt-3" id="timer" style="display:none"><a
                                                        class="text-decoration-none text-light"
                                                        href="/register/resend">Resend Otp</a></button>

                                            </div>


                                            <div class="mb-4 d-flex justify-content-center  btn-lg">
                                                <button
                                                    class=" btn login-btn m-auto px-5 py-1 rounded-pill fs-3 fw-bold bg-success text-light"
                                                    type="submit" name="submit" id="submit">Submit</button>
                                            </div>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <%- include('./partials/bottom-navbar') %>
                <script src="script/script.js"></script>
                <script>var timeLeft = 10;
                    var elem = document.getElementById('time');
                    var timerId = setInterval(countdown, 1000);

                    function countdown() {
                        var button = document.getElementById("timer");
                        if (timeLeft == -1) {
                            button.style.display = "inline-block";

                        } else {
                            elem.innerHTML = 'Resent otp in ' + timeLeft + ' seconds';
                            timeLeft--;
                        }
                    }
                </script>

    </body>

</html>