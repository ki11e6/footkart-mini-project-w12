<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="adminlogbg d-flex flex-column min-vh-100">
        <%- include('../partials/top-navdef') %>

            <section class=" block bg-image">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3 ">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-80 p-3 mt-3">
                            <div class=" col-12 col-md-9 col-lg-7 col-xl-6 ">
                                <div class="card rounded-4 mt-5 ">
                                    <div class="card-body p-3 rounded-4 bg-dark">
                                        <h1 class="reg  text-center mb-3 text-light ">Admin LogIn</h1>
                                        <p class="text-danger text-center">
                                            <%= message %>
                                        </p>
                                        <form class="adminlogin p-3" id="adminlogin" action="/admin/adminlogin"
                                            method="POST">

                                            <div class="input-control mb-4 ">
                                                <label class="form-label text-light" for="adminname">Name</label>
                                                <input type="text" id="adminname" name="adminname"
                                                    class="form-control form-control-lg"
                                                    placeholder="Enter Admin Name" />
                                                <!-- <small>Error message</small> -->
                                            </div>
                                            <div class="input-control mb-4 ">
                                                <label class="form-label text-light" for="password">Password</label>
                                                <input type="password" id="adminpassword" name="adminpassword"
                                                    class="form-control form-control-lg"
                                                    placeholder="Enter Admin Password" />
                                                <!-- <small>Error message</small> -->
                                            </div>
                                            <div class="mb-4 d-flex justify-content-center  btn-lg type=submit">
                                                <button
                                                    class=" btn login-btn m-auto px-5 py-1 rounded-pill fs-3 bg-success text-white"
                                                    type="submit" name="submit" id="submit">Login</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <%- include('../partials/bottom-navbar') %>
                <script src="/script/scriptadmin.js"></script>
    </body>

</html>