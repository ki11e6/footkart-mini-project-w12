<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body class="d-flex flex-column min-vh-100 homepage">


    <nav class="navbar navbar-expand-lg bg-dark navbar-parent fixed-top border-bottom border-dark border-3" id="navbar">
      <div class="container-fluid">
        <div>

          <a class="brand text-white" href="#"><i>FootKart</i></a>
        </div>
        <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle fs-5 fw-bold  text-light text-decoration-none " href="#" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Account
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item text-center fs-5 fw-bold text-decoration-none " href="/login">Sign In</a>
                </li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item text-center fs-5 fw-bold  text-decoration-none " href="/register">Sign
                    Up</a>
                </li>
              </ul>
            </li>
            <li class="nav-item p-2"><a class="fs-5 fw-bold mx-3  text-light text-decoration-none " href="/shop"> Shop
              </a>
            </li>
            <li class="nav-item p-2"><a href="/cart" class="text-decoration-none fs-5 fw-bold text-light mx-3">Cart</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- banners -->
    <div class="container">
      <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/productimages/banner1.jpg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/productimages/banner2.jpg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/productimages/banner3.jpg" class="d-block w-100" alt="..." />
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <!-- products -->
    <div class="container text-center">
      <h1 class="mt-3 bg-secondary p-3 fw-bold"><i>Latest Products</i></h1>
      <br>

      <div class="row">
        <% if(products.length>0){ %>
          <% products.forEach(item=>{ %>

            <div class="col-md-3">
              <a href="/product/details/<%=item._id %>">
                <div class="dress-card">
                  <div class="dress-card-head">
                    <img class="dress-card-img-top" src="/<%= item.images[0] %>" alt="">
                    <!-- <div class=" surprise-bubble"><span class="dress-card-heart">
                        <i class="fas fa-heart"></i>
                      </span><a href="#"> <span>More</span></a>
                    </div> -->
                  </div>
                  <div class="dress-card-body text-dark">
                    <h4 class="dress-card-title text-truncate">
                      <%= item.productname %>
                    </h4>
                    <p class="dress-card-para"></p>
                    <% if (item.offer>0){ %>
                      <p class="dress-card-para mt-1"><span class="dress-card-price fs-5">Price: ₹ <%=
                            Math.round(item.price -( item.price *(item.offer/100))) %>/-</span><span
                          class="dress-card-crossed mt-1"></span><span class="dress-card-off text-primary">(<%=
                            item.offer %>% OFF)</span></p>
                      <% } else{ %>
                        <p class="dress-card-para mt-1"><span class="dress-card-price fs-5">Price: ₹ <%=item.price %>
                              /-</span><span class="dress-card-crossed mt-1"></span></p>
                        <% }%>

                  </div>
                </div>
              </a>
            </div>

            <% }) %>
              <% } %>
      </div>
    </div>

    <%- include('./partials/bottom-navbar') %>
  </body>

</html>