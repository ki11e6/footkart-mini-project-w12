<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body class="homepage d-flex flex-column min-vh-100">
    <%- include('../partials/user/user-navbar') %>

      <div class="container bg-white">
        <div class="col-md-12 my-3">
          <h2 class="p-3 bg-light"><i>All Products</i></h2>
        </div>
        <div class="row">
          <div class="col-12 col-lg-2 bg-light">
            <div class="col-12 pt-1" id="filters">
              <p>Price Filter</p>
              <form action="/products/filter" method="GET" class="row">
                <div class=" col-6">
                  <input class="form-control range-form border-2" type="text" name="from" id="from" placeholder="from">
                </div>
                <div class=" col-6">
                  <input class="form-control range-form border-2" type="text" name="to" id="to" placeholder="to">
                </div>
                <div class="d-flex flex-column mt-3">
                  <p>Categories</p>
                  <% category.forEach(item=> { %>
                    <label for="brand">
                      <input class="form-check-input border-2" type="checkbox" id="category[]" name="category[]"
                        value="<%=item.id %>">
                      <%= item.categoryname %>
                    </label>
                    <% }) %>
                </div>
                <div class="pt-4">
                  <button type="submit" class="btn btn-primary ">Submit</button>
                </div>
              </form>
            </div>
            <!-- <div class="d-flex justify-content-start pt-3">
              <button class="btn btn-info btn-lg fw-bold mb-4" type="button" data-bs-toggle="collapse"
                data-bs-target="#filters" aria-expanded="false" aria-controls="filters">FILTERS</button>
            </div> -->
          </div>
          <div class="col-12 col-lg-10">


            <div class="row">

              <!-- <div></div>
        -->
              <% let count=1 %>
                <% if(products.length>0){ %>
                  <% products.forEach(item=>{ %>

                    <% count++ %>


                      <div class="col-md-3">
                        <a href="/product/details/<%=item._id %>">
                          <div class="dress-card">
                            <div class="dress-card-head">
                              <img class="dress-card-img-top" src="/<%= item.images[0] %>" alt="">
                              <div class=" surprise-bubble"><span class="dress-card-heart">
                                  <i class="fas fa-heart"></i>
                                </span><a href="#"> <span>More</span></a>
                              </div>
                            </div>
                            <div class="dress-card-body">
                              <h4 class="dress-card-title mt-1 text-truncate">
                                <%= item.productname %>
                              </h4>
                              <p class="dress-card-para"></p>
                              <% if (item.offer>0){ %>

                                <p class="dress-card-para mt-1 position-relative"><span class="fw-bold fs-5">
                                    Price:₹<Del class="text-danger fs-6">
                                      <%= item.price%>
                                    </Del></span><span class="dress-card-price fs-4">
                                    <%= Math.round (item.price-(item.price *(item.offer/100))) %>
                                  </span><span class="dress-card-crossed mt-1"></span>
                                  <span
                                    class="position-absolute top-30 start-100 translate-middle badge rounded-pill bg-danger">(
                                    <%= item.offer %>% OFF)
                                  </span>
                                </p>
                                <% } else{ %>
                                  <p class="dress-card-para mt-1"><span class="dress-card-price fs-5">Price: ₹
                                      <%=item.price %>
                                    </span><span class="dress-card-crossed mt-1"></span></p>

                                  <% }%>
                                    <div class="d-flex justify-content-between mt-3">
                                      <button class="btn-wishlist" id="btn-cart" onclick="addtoCart('<%= item._id %>')">
                                        <i class="fa fa-shopping-cart"></i>
                                      </button>
                                      <button class="btn-wishlist" onclick="addtoWishlist('<%= item._id %>')">
                                        <i class="fa fa-heart"></i>
                                      </button>
                                    </div>
                            </div>
                          </div>
                        </a>
                      </div>


                      <% })%>
                        <div class="col-lg-12">
                          <nav aria-label="Page navigation example">
                            <ul class="pagination">
                              <% for(let i=1; i<=pages; i++){ %>

                                <li class="page-item"><a class="page-link" href="/shop/next/?page=<%= i %>">
                                    <%= i %>
                                  </a></li>
                                <% } %>

                            </ul>
                          </nav>
                        </div>

                        <% } else{ %>

                          <div class='d-flex justify-content-center  mt-5 mb-5'>
                            <lottie-player src="https://assets1.lottiefiles.com/private_files/lf30_zncbuxbi.json"
                              background="transparent" speed="1" style="width: 400px; height: 400px;" loop
                              autoplay></lottie-player>
                          </div>
                          <%} %>

            </div>

          </div>
        </div>
      </div>


      <%- include('../partials/bottom-navbar') %>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
        <script src="/script/scriptadmin.js"></script>
  </body>

</html>