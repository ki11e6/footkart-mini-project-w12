<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="d-flex flex-column min-vh-100 homepage">
        <%- include('../partials/user/user-navbar') %>
            <div class="container rounded bg-white mt-5 mb-5 ">
                <div class="row">


                    <div class="col-md-6 border border-primary rounded-4 ">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
                                class="rounded-circle mt-5" width="150px"
                                src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span
                                class="font-weight-bold">
                                <%= user.username %>
                            </span><span class="text-black-50">
                                <%= user.email %>
                            </span><span> </span></div>
                    </div>
                    <div class="col-md-6  border border-success rounded-4 ">
                        <div class="p-4 ">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Edit Details</h4>
                            </div>
                            <form action="/edituser/<%=user.id %>" method="post">
                                <div class="row mt-3">
                                    <div class="col-md-12"><label class="labels">Edit Username</label><input type="text"
                                            class="form-control" placeholder="" value="<%= user.username %>"
                                            id="username" name="username"></div>

                                    <div class="col-md-12"><label class="labels">Edit Email</label><input type="email"
                                            class="form-control" placeholder="" value="<%= user.email %>" id="email"
                                            name="email"><br><br></div>

                                    <div class="col-md-12"><label class="labels">Edit Number</label><input type="text"
                                            class="form-control" placeholder="" value="<%= user.number %>" id="number"
                                            name="number"></div>

                                </div>

                                <div class="mt-5 text-center"><button class="btn btn-success profile-button"
                                        type="submit">Edit Details</button></div>
                            </form>
                        </div>
                    </div>

                    <div class="col-lg-6 col-12 border border-danger p-4 rounded-4">
                        <h3 class="  mb-5">Delivery Address</h3>
                        <% let count=1 %>

                            <table class="table w-100 ">
                                <thead class="">
                                    <tr>

                                        <th scope="">Address</th>
                                        <th scope="">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="">
                                    <% if(shippingAddress.length>0 ){ %>
                                        <% shippingAddress.forEach(item=> { %>

                                            <tr>

                                                <td class="fw-bold  text-start">
                                                    <%= item.address %>,<br>
                                                        <%= item.city %><br>
                                                            <%= item.state %>,<%= item.pincode %>
                                                </td>
                                                <td> <button type="button" class="btn btn-outline-danger btn-sm"
                                                        id="<%= count%>"
                                                        onclick="deleteAddress(this.id,'<%=item._id %>')"
                                                        data-url="<%=item._id %>"> Delete </button>
                                                </td>

                                            </tr>

                                            <% }) %>
                                                <% } %>
                                </tbody>
                            </table>

                    </div>



                    <div class="col-md-6 border border-info p-4 rounded-4"">
                        <form action=" /add/address" method="POST">
                        <div>
                            <h4> Add New ShippingAddress</h4><br><br>
                        </div>
                        <div class="col-md-12"><label class="labels">Address </label><input type="text"
                                class="form-control" placeholder="" value="" id="address" name="address"></div>
                        <div class="col-md-12"><label class="labels">City</label><input type="text" class="form-control"
                                placeholder="" value="" id="city" name="city"></div>
                        <div class="col-md-12"><label class="labels">State</label><input type="text"
                                class="form-control" placeholder="" value="" id="state" name="state"></div>
                        <div class="col-md-12"><label class="labels">Pincode</label><input type="number"
                                class="form-control" placeholder="" value="" id="pincode" name="pincode"></div>

                        <div class="mt-5 text-center"><button class="btn btn-info profile-button" type="submit">Add
                                Address</button></div>

                        </form>
                    </div>

                </div>
            </div>


            <%- include('../partials/bottom-navbar') %>
                <script src="/script/scriptadmin.js"></script>
                <script>

                </script>
    </body>

</html>