<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>


  <body class="homepage d-flex flex-column min-vh-100">
    <%- include('../partials/user/user-navbar') %>

      <section class="container ">
        <div class="row">

          <div class="col-md-6 position-relative">
            <div class="d-flex justify-content-center  p-3 bg-white">
              <div id="img-container" class="img-cont">
                <img id="main-image" class="main-image " src="/<%= product.images[0] %>" alt="">
              </div>

            </div>
            <div class="d-flex px-5 justify-content-center bg-light">
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image1" onclick="changeImage(this)"
                    src="/<%= product.images[0] %>" alt="">
                </div>
              </div>
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image2" onclick="changeImage(this)"
                    src="/<%= product.images[1] %>" alt="">
                </div>
              </div>
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image3" onclick="changeImage(this)" src="/<%=product.images[2] %>"
                    alt="">
                </div>
              </div>
            </div>
            <div class="d-flex my-sm-5 my-1 justify-content-center">
              <div class="col-3 d-flex justify-content-center align-items-center">
                <button class="btn-wishlist " style="width: 160px; height: 60px;"
                  onclick="addtoWishlist('<%=product._id %>')">WISHLIST
                </button>
              </div>
              <div class="col-4 d-flex justify-content-center ps-sm-5 ps-1">
                <button class="btn-wishlist" id="btn-cart" style="width: 160px; height: 60px;"
                  onclick="addtoCart('<%= product._id %>')">CART
                </button>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="border border-secondary m-3 p-3 rounded-4 bg-light rounded-4">
              <div class="">
                <p class="product-details-title pt-4 mb-0 fs-2 fw-bold text-decoration-underline ">
                  <%= product.productname %>
                </p>

              </div>
              <div class="pt-2 product-details-price fs-3 fw-bolder ">
                <% if(product.offer>0 ){ %>
                  <p class="bg-white text-danger">Price: ₹ <%= Math.round( (product.price)-( product.price
                      *(product.offer/100))) %>
                      <span class="text-warning">(<%=product.offer %>%)</span></p>
                  <% } else{ %>
                    <p class="bg-white text-danger">Price: ₹ <%= product.price %>/-
                    </p>
                    <% } %>
              </div>
              <div class="fs-4 bg-secondary rounded-4 p-2">
                <div class="fw-bold">Products Discription:</div>
                <p class="fst-italic lh-sm fs-5">
                  <%= product.description %>
                </p>
              </div>
              <div>
                <p class="mb-0 label-text fs-4 fw-bold">Color: <%= product.color %>
                </p>
              </div>
              <div class="d-flex mb-3">
                <div class="pe-3">
                  <p class="label-text fs-4 fw-bold">Size : <%= product.size %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>


      <%- include('../partials/bottom-navbar') %>
        <script src="https://unpkg.com/js-image-zoom/js-image-zoom.js"></script>
        <!-- <script src="https://cdn.jsdelivr.net/npm/js-image-zoom/js-image-zoom.min.js"></script>  -->
        <script src="/script/scriptadmin.js"></script>

        <script>
          const mainimage = document.getElementById("main-image")
          function changeImage(image) {
            mainimage.src = image.src
            new ImageZoom(document.getElementById("img-container"), options);
          }
          var options = {
            width: 300,
            height: 350,
            zoomWidth: 600,



            // required
            // more options here
          };
          new ImageZoom(document.getElementById("img-container"), options);

        </script>

  </body>

</html>