<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="d-flex flex-column min-vh-100">
        <%- include('../partials/user/user-navbar')%>


            <section class="container">
                <div class="col-7 m-auto">
                    <div class="card mb-4">
                        <div class="card-body">
                            <form action="/add/address/<%=user.id %>" method="post">
                                <div class="row mt-3">
                                    <div>
                                        <h4> ADD NEW SHIPPING ADDRESS</h4><br><br>
                                    </div>
                                    <small class="text-danger fw-bold mb-2"><%-message %></small>
                                    <div class="col-md-12"><label class="labels fw-bold mb-2">Address </label><input
                                            type="text" class="form-control mb-4 " placeholder="" value="" id="address"
                                            name="address"></div>
                                    <div class="col-md-12"><label class="labels fw-bold mb-2">City</label><input
                                            type="text" class="form-control mb-4" placeholder="" value="" id="city"
                                            name="city"></div>
                                    <div class="col-md-12"><label class="labels fw-bold mb-2">State</label><input
                                            type="text" class="form-control mb-4" placeholder="" value="" id="state"
                                            name="state"></div>
                                    <div class="col-md-12"><label class="labels fw-bold mb-2">Pincode</label><input
                                            type="number" class="form-control mb-4" placeholder="" value="" id="pincode"
                                            name="pincode"></div>
                                </div>


                                <div class="mt-5 text-center"><button class="btn btn-secondary profile-button"
                                        type="submit">ADD ADDRESS</button></div>
                            </form>

                        </div>
                    </div>
            </section>

            <%- include('../partials/bottom-navbar') %>
    </body>

</html>